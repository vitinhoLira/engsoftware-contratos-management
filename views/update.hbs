<form action="/update" method="post">
<h1>Atualize o contrato</h1>
  <input type="hidden" name="chave" value="{{this.dadosEdicao.chave}}"><br>
  <input type="text" name="aluno" value="{{this.dadosEdicao.aluno}}" placeholder="Nome do aluno"><br><br>
  <input type="text" name="orientador" value="{{this.dadosEdicao.orientador}}" placeholder="Nome do orientador"><br><br>
  <input type="text" name="empresa" value="{{this.dadosEdicao.empresa}}" placeholder="Nome da empresa"><br><br>
  <input type="text" name="agente" value="{{this.dadosEdicao.agente}}" placeholder="Nome do agente"><br><br>
  <input type="submit" value="Salvar">
</form>

<h1>Lista de contratos</h1>
<ul>
  {{#each empresas}}
    <li>
        <form action="/del" method="post" style="display: inline;">
            <span>{{this.empresa}}</span>
            <input type="hidden" name="chave" value="{{this.chave}}">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="Excluir">
        </form>
        <form action="/update" method="post" style="display: inline;">
            <input type="hidden" name="chave" value="{{this.chave}}">
            <input type="hidden" name="_method" value="PUT">
            <input type="submit" value="Editar">
        </form>
    </li>
  {{/each}}
</ul>
