<h3 style="color: red; font-weight: bold;">{{message}}</h3>
<h3 style="color: green; font-weight: bold;">{{successMessage}}</h3>
<h3 style="color: green; font-weight: bold;">{{messageCad}}</h3>

<h2>Acesse a plataforma por apenas 20R$</h2>

<form action="/processar-pagamento" method="POST">
  <fieldset>
    <legend>Dados do Cliente</legend>
    <div class="form-group">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" name="nome" required />
    </div>
    <div class="form-group">
      <label for="cpf">CPF:</label>
      <input
        type="text"
        id="cpf"
        name="cpf"
        required
        pattern="\d{11}"
        placeholder="Apenas números"
      />
    </div>
  </fieldset>

  <fieldset>
    <legend>Dados do Cartão</legend>
    <div class="form-group">
      <label for="numero_cartao">Número do Cartão:</label>
      <input
        type="text"
        id="numero_cartao"
        name="numero_cartao"
        required
        pattern="\d{16}"
        placeholder="Apenas números"
      />
    </div>
    <div class="form-group">
      <label for="mes_expiracao">Mês de Expiração:</label>
      <input
        type="text"
        id="mes_expiracao"
        name="mes_expiracao"
        required
        pattern="\d{2}"
        placeholder="MM"
      />
    </div>
    <div class="form-group">
      <label for="ano_expiracao">Ano de Expiração:</label>
      <input
        type="text"
        id="ano_expiracao"
        name="ano_expiracao"
        required
        pattern="\d{4}"
        placeholder="AAAA"
      />
    </div>
    <div class="form-group">
      <label for="cvv">Código CVV:</label>
      <input
        type="text"
        id="cvv"
        name="cvv"
        required
        pattern="\d{3}"
        placeholder="XXX"
      />
    </div>
  </fieldset>

  <button type="submit">Realizar Pagamento</button>
</form>